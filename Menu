void menu(int option){
    int option1;
    int option2;
    LibretaContactos libreta;
    switch (option) {
        case 1:
            //Contactos
            calltext("contactos.txt");
            cout << "Que contactos desea ver? " << endl << "(1) Contactos: " << endl <<"(2) Mas frecuentes: " << endl <<"(3) Buscar nombre por letra: "<< endl; 
            cin >> option1;
            switch(option1){
                case 1:
                    libreta.MostrarContactos();
                    break;
                case 2:
                    libreta.RevisarFrecuencia();
                    break;
                case 3:
                    char letra;
                    cout<< "ingresa la letra por buscar: "<< endl;
                    cin >> letra;
                    libreta.MostrarContactosPorLetra(letra);
                    break;
                default:
                    cout << "Opción inválida." << endl;
                    break;
            }
            break;
        case 2:
            //Editor
            // EN CASO DE AGREGAR CONTACTO
            Contacto contactoNuevo;
            string nom;
            int num;
            string dire;
            string red_s;
            string nred;
            int Q;
            bool estado = false;
            int num_a = rand()%4000+4000;
            char icono = static_cast<char>(num_a);
            
            calltext("editor.txt");
            cout << "Que desea hacer? " << endl << "(1) Agregar contacto: " << endl <<"(2) Eliminar contacto: " << endl;
            cin >> option2;
            switch(option2){
                case 1:
                    cout<<"Nombre: "<< endl;
                    cin>>nom;
                    cout<<"Numero: "<<endl;
                    cin>>num;
                    cout<<"Direccion: "<<endl;
                    cin>>dire;
                    do{
                        
                        cout<<"Red social: "<<endl;
                        cin>>red_s;
                        cout<<"Usuario"<<endl;
                        cin>>nred;
                        contactoNuevo.set_red(red_s, nred);
                        cout<<"desea agregar otra red social: (1) si (2) no"<<endl;
                        cin>>Q;
                        if(Q == 1){
                            estado = true;
                        }else{
                            estado = false;
                        }
                    } while (estado); // Aquí se añade el paréntesis que cierra el bucle do-while

                    contactoNuevo.set_nombre(nom);
                    contactoNuevo.set_telf(num);
                    contactoNuevo.set_direcc(dire);
                    contactoNuevo.set_ico(icono);
                    libreta.AgregarContacto(contactoNuevo);
                    break;
                case 2:
                    string eliminado;
                    cout << "A quien desea eliminar? (por favor escriba el nombre tal cual como lo guardo): "<<endl;
                    libreta.EliminarContacto(eliminado);
                    break;    
            }
            break;
    }
}
